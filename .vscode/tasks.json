{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "windowsdll",
            "command": "C:\\MinGW64\\bin\\g++.exe",
            "args": [
                "-shared",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.dll",
                "-lopengl32",
                "-lgdi32",
                "-static",
                "-static-libgcc",
                "-static-libstdc++"
            ],
            "options": {
                "cwd": "C:\\MinGW64\\bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "windows",
            "command": "C:\\MinGW64\\bin\\g++.exe",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "-lopengl32",
                "-lgdi32",
                "-static",
                "-static-libgcc",
                "-static-libstdc++"
            ],
            "options": {
                "cwd": "C:\\MinGW64\\bin"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "type": "shell",
            "label": "linux",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.out",
                "-std=c++17",
                "-lX11",
                "-lGL"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "group": "build"
        }
    ]
}