{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Windows DLL",
            "command": "C:\\MingW64\\bin\\gcc.exe",
            "args": [
                "-shared",
                "${workspaceFolder}\\src\\*.c",
                "-o",
                "${workspaceFolder}\\lib\\windows\\SzarkCore.dll",
                "-lopengl32",
                "-lgdi32",
                "-static",
                "-static-libgcc"
            ],
            "options": {
                "cwd": "C:\\MingW64\\bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "Linux SO",
            "command": "/usr/bin/gcc",
            "args": [
                "-shared",
                "-fPIC",
                "${workspaceFolder}/src/*.c",
                "-o",
                "${workspaceFolder}/lib/linux/SzarkCore.so",
                "-lX11",
                "-lGL"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}