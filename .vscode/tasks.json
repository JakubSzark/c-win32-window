{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "windowsdll",
            "command": "C:\\MinGW64\\bin\\g++.exe",
            "args": [
                "-shared",
                "${workspaceFolder}\\src\\szark_core.cpp",
                "-o",
                "${workspaceFolder}\\bin\\windows\\Szark Core.dll",
                "-lopengl32",
                "-lgdi32",
                "-static",
                "-static-libgcc",
                "-static-libstdc++"
            ],
            "options": {
                "cwd": "C:\\MinGW64\\bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "linuxdll",
            "command": "/usr/bin/g++",
            "args": [
                "-shared",
                "-fPIC",
                "${workspaceFolder}/src/szark_core.cpp",
                "-o",
                "${workspaceFolder}/bin/linux/Szark Core.so",
                "-std=c++17",
                "-lX11",
                "-lGL"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "group": "build"
        }
    ]
}