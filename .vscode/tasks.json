{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "g++.exe build active file",
            "command": "C:\\MinGW64\\bin\\g++.exe",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "-lopengl32",
                "-lgdi32",
                "-static",
                "-static-libgcc",
                "-static-libstdc++"
            ],
            "options": {
                "cwd": "C:\\MinGW64\\bin"
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}